{
    "name": "microfrontend",
    "version": "1.0.0",
    "license": "ISC",
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "private": true,
    "scripts": {
        "start": "yarn lerna run --scope @microfrontend/* --parallel start",
        "build": "yarn lerna run --scope @microfrontend/* build",
        "serve": "yarn lerna run --scope @microfrontend/* --parallel serve",
        "clean": "yarn lerna run --scope @microfrontend/* --parallel clean"
    },
    "workspaces": [
        "apps/*"
    ]
}
